<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tdm.miniproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CartActivity"
            android:label="Chariot"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ProductDetailActivity"
            android:label="Détaille du produit"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".activities.OrdersActivity"
            android:label="Commandes"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.OrderDetailsActivity"
            android:label="Détails de la commande"
            android:parentActivityName=".activities.OrdersActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.OrdersActivity" />
        </activity>
    </application>

</manifest>
