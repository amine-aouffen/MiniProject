<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/activity_pref_chooser_width"
    android:layout_height="@dimen/activity_pref_chooser_height"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="tdm.miniproject.activities.PreferenceChooser">
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/preferencesSpinner"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prefChooseOk"
        android:background="@null"
        android:textColor="@color/colorPrimary2"
        android:text="Valider"
        android:gravity="left"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/preferencesSpinner"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prefChooseCancel"
        android:background="@null"
        android:textColor="@color/colorPrimary2"
        android:text="Annuler"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/preferencesSpinner"
        />

</RelativeLayout>
