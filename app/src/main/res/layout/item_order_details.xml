<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/orderItemTitle"
            style="@style/textItemTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03/01/2016"
            android:id="@+id/orderItemDate"
            android:layout_below="@id/orderItemTitle"
            style="@style/textItemDesc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderItemTotalLbl"
            android:text="Prix totale: "
            android:layout_below="@id/orderItemDate"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderItemTotal"
            android:layout_below="@id/orderItemDate"
            android:layout_toRightOf="@id/orderItemTotalLbl"
            style="@style/textItemSpecial"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderItemStatusLbl"
            android:text="Etat: "
            android:layout_below="@id/orderItemTotal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderItemStatus"
            android:layout_below="@id/orderItemTotal"
            android:layout_toRightOf="@id/orderItemStatusLbl"
            style="@style/textItemSpecial"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderItemStatusIcon"
            android:layout_below="@id/orderItemTotal"
            android:layout_toRightOf="@id/orderItemStatus"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ScrollView>
    <ImageView
        android:layout_height="@dimen/item_image_height"
        android:layout_width="@dimen/item_image_width"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/orderDetailsItemImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderDetailsItemName"
        android:layout_toRightOf="@id/orderDetailsItemImage"
        android:layout_alignParentTop="true"
        style="@style/textItemTitle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderDetailsItemDescription"
        android:layout_below="@+id/orderDetailsItemName"
        android:layout_toRightOf="@id/orderDetailsItemImage"
        android:layout_toLeftOf="@+id/orderDetailsItemQuantity"
        style="@style/textItemDesc"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderDetailsItemPrice"
        android:layout_toRightOf="@id/orderDetailsItemImage"
        android:layout_below="@id/orderDetailsItemDescription"
        android:layout_alignParentBottom="true"
        style="@style/textItemSpecial"
        />
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/orderDetailsItemQuantity"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>