<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_product_list_small">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderItemTitle"
        style="@style/textItemTitle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03/01/2016"
        android:id="@+id/orderItemDate"
        android:layout_below="@id/orderItemTitle"
        style="@style/textItemDesc"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderItemTotalLbl"
        android:text="Prix totale: "
        android:layout_below="@id/orderItemDate"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderItemTotal"
        android:layout_below="@id/orderItemDate"
        android:layout_toRightOf="@id/orderItemTotalLbl"
        style="@style/textItemSpecial"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderItemStatusLbl"
        android:text="Etat: "
        android:layout_below="@id/orderItemTotal"
        android:layout_toLeftOf="@+id/orderItemStatus"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderItemStatus"
        android:layout_below="@id/orderItemTotal"

        style="@style/textItemSpecial"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderItemStatusIcon"
        android:layout_below="@id/orderItemTotal"
        android:layout_toRightOf="@id/orderItemStatus"/>


</RelativeLayout>